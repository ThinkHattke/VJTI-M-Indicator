<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/title"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_marginStart="27dp"
                android:text="Terms and Condition" />

            <ImageView
                android:tint="@color/white"
                android:id="@+id/dismiss"
                android:layout_marginEnd="13dp"
                android:layout_alignParentEnd="true"
                android:padding="13dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_close"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="textStart"
                android:layout_width="wrap_content"
                android:maxWidth="300dp"
                android:layout_height="match_parent"
                android:text="This service might use live location, which mean this app will have access to your location and track you to serve you better and help the RAILWAY COMMUNITY. \n      Storing your Pass in digital format is just used for management purposes, don't use it for presentation purposes since it won't valid as a digital copy.\n  Location and related tracked in the app is completely anonymously saved and used and end result is just the indication of Railway system. Terms and Condition Apply"/>


        </ScrollView>
        
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <CheckBox
                android:buttonTint="@color/colorPrimary"
                android:id="@+id/agree"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:paddingTop="4dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_marginStart="50dp"
                android:text="I Agree"
                android:layout_height="match_parent" />


        </RelativeLayout>

        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/go"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>